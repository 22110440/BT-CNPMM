<%- include('../partials/head', { title: 'Danh sách Users' }) %>
<%- include('../partials/navbar') %>

<main class="py-5">
  <div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h2 class="h4 m-0">Danh sách Users</h2>
      <a href="/" class="btn btn-primary btn-icon"><i class="bi bi-plus-circle"></i> Tạo mới</a>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-tools mb-3">
          <input id="table-search" type="text" class="form-control search" placeholder="Tìm kiếm..." />
        </div>
        <div class="table-responsive">
          <table id="user-table" class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Age</th>
                <th class="text-end">Action</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.age %></td>
                  <td class="text-end">
                    <a class="btn btn-outline-warning btn-sm btn-icon" href="/edit-user/<%= user._id %>"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a class="btn btn-outline-danger btn-sm btn-icon" href="/delete-user/<%= user._id %>" onclick="return confirm('Bạn có chắc muốn xóa?')"><i class="bi bi-trash"></i> Delete</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

<script>attachTableSearch('#table-search', '#user-table');</script>
<%- include('../partials/footer') %>